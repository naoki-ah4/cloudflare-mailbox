{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "src/app/**/*",
    "src/app/**/.server/**/*",
    "src/app/**/.client/**/*",
    "workers/**/*",
    "worker-configuration.d.ts",
    "src/utils/**/*.ts",
    "src/email/**/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "vite/client"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}